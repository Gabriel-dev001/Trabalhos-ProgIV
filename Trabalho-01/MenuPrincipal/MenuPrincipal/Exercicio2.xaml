<Window x:Class="MenuPrincipal.Exercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 2 - Conversor de Temperatura" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Conversor (Celsius → Fahrenheit)" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Label Content="Temperatura (°C):" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtCelsius" Width="150" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Content="Converter" Width="100" Height="35" 
                    Background="Black" Foreground="White"
                    HorizontalAlignment="Center" Click="Converter_Click"/>
        </StackPanel>
    </Grid>
</Window>
