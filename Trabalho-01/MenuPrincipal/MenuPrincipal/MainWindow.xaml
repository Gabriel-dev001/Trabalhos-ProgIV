<Window x:Class="MenuPrincipal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu de Exercícios - WPF" Height="550" Width="650"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="-127,0,0,0">
        <Border Background="White" CornerRadius="18" Padding="30" Margin="125,0,1,31" VerticalAlignment="Bottom" Height="521" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.855"/>
                    <RotateTransform/>
                    <TranslateTransform X="2.726"/>
                </TransformGroup>
            </Border.RenderTransform>
            <StackPanel>


                <TextBlock x:Name="txtMensagem"
                   Text="Atividades !"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Black"
                   />


                <UniformGrid Columns="2" Rows="3" HorizontalAlignment="Center" Height="291" Width="556">
                    <Button Content="Exercício 1" Click="AbrirExercicio1_Click"/>
                    <Button Content="Exercício 2" Click="AbrirExercicio2_Click"/>
                    <Button Content="Exercício 3" Click="AbrirExercicio3_Click"/>
                    <Button Content="Exercício 4" Click="AbrirExercicio4_Click"/>
                    <Button Content="Exercício 5" Click="AbrirExercicio5_Click"/>
                    <Button Content="Exercício 6" Click="AbrirExercicio6_Click"/>
                    <Button Content="Exercício 7" Click="AbrirExercicio7_Click"/>
                    <Button Content="Exercício 8" Click="AbrirExercicio8_Click"/>
                    <Button Content="Exercício 9" Click="AbrirExercicio9_Click"/>
                    <Button Content="Exercício 10" Click="AbrirExercicio10_Click"/>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
